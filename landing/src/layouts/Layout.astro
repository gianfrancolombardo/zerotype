---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Zerotype - Escribe sin errores. Programa sin lÃ­mites."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" sizes="32x32" />
		<link
			rel="icon"
			type="image/png"
			href="/favicon-192.png"
			sizes="192x192"
		/>
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Space+Grotesk:wght@300;500;700&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
	</head>
	<body class="antialiased selection:bg-white/20">
		<slot />
	</body>
</html>
